	}
	return {{.Model.Name | ToLower}}, nil
}


func  ({{.Model.Name | Initial}} *{{.Model.Name}}DB) GetAll{{.Model.Name}}s(skip int64, limit int64, selector interface{}) ([]models.{{.Model.Name}}, error) {
{{.Model.Name | ToLower}}s := []models.{{.Model.Name}}{}
